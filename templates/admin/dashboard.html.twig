<html>
<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
</head>
<body>
<header class="admin-header">
    <div class="admin-dashboard">
        <i class="fa fa-user-o" aria-hidden="true"></i>
        <a href="{{ path('app_logout') }}">Logout</a>
    </div>
</header>
<aside class="admin-sidebar">
    <a href="{{ path('app-admin') }}"><img src="{{ asset('images/imdblogo.png') }}" alt="IMDb Logo" class="logo"></a>
    <nav class="admin-nav">
        <ul class="admin-menu">
            <li><a href="{{ path('app-admin') }}" class="admin-menu-item">Movie List</a></li>
            <li><a href="{{ path('add_movie') }}" class="admin-menu-item">Add Movies</a></li>
            <li><a href="{{ path('view-rating') }}" class="admin-menu-item">View Ratings</a></li>
        </ul>
    </nav>
</aside>
<main class="admin-content">
    <h1 class="admin-title">Admin Dashboard</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Director</th>
                <th>Description</th>
                <th>Release Year</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for movie in movies %}
                <tr>
                    <td>{{ movie.id }}</td>
                    <td>{{ movie.title }}</td>
                    <td>{{ movie.director }}</td>
                    <td>{{ movie.description }}</td>
                    <td>{{ movie.year }}</td>
                    <td>{{ movie.Category }}</td>
                    <td>
                        <a href="{{ path('edit_movie', {'id': movie.id}) }}" class="btn btn-primary">Edit</a>
                        <a href="{{ path('delete_movie', {'id': movie.id}) }}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</main>
</body>
</html>
